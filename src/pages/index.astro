---
import Layout from '../layouts/Layout.astro';
import Reference from '../components/Sections/Reference.astro';
import CataloguePreview from '../components/Sections/CataloguePreview.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="header-content">
			<h1>Formez vous aux outils numériques essentiels à la croissance de votre entreprise</h1>
			<a href="/" class="cta-primary">Trouver une formation</a>
		</div>
		<Reference />
		<CataloguePreview />
	</main>
</Layout>

<style>
	main {
		padding: 1.2rem;
	}
	.header-content {
		background-image: url('/img/formation-seo-entreprises.png');
		background-repeat: no-repeat;
		background-size: cover;
		background-position: left;
		padding: 11.7rem 1.7rem 1.9rem 1.7rem;
		border-radius: 20px;
		color: #fff;
	}
	.header-content h1 {
		margin-bottom: 2rem;
	}
</style>
