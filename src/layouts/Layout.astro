---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icone-spines.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');

	body{
		max-width: 1640px;
		margin: 0 auto;
		font-family: 'Inter', sans-serif;
		background-color: #FFFEFB;
		color: #332E47
	}
	section {
		padding: 2rem 1.2rem;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1 {
		font-weight: 700;
		line-height: 2.8rem;;
	}
	h2 {
		font-weight: 600;
		line-height: 2.4rem;;
	}
	.cta-primary {
		background-color: #CD286D;
		display: inline-block;
		padding: 1rem 1.5rem;
		border-radius: 15px;
		text-decoration: none;
		color: white;
		font-weight: 600;
	}
</style>
