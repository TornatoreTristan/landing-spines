---
import DropDownMenu from '../components/Nav/DropDownMenu.vue'
---

<header>
  <div>
    <img src="./logotype-spines-formation-seo-sea.svg" alt="spines-formation-seo-sea">
  </div>
  <DropDownMenu client:load />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 25px 30px;
    background-color: #fff;
    box-shadow: 0 0 30px rgba(0, 0, 0, 0.07);
    padding: 1rem 2rem;
    border-radius: 25px;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
  }
  .main-nav ul {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }
</style>